<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:text="@string/what_repository_lookin"
                app:fontFamily="@font/fira_sans"
                android:textColor="@android:color/black"
                android:textSize="18sp" android:layout_margin="5dp" android:padding="5dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:hint="@string/enter_user_name"
                android:fontFamily="@font/fira_sans" android:layout_margin="5dp"/>
        <Button
                android:text="@string/show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button" android:layout_margin="5dp"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/posts_recycle_view" android:layout_margin="5dp"/>
    </LinearLayout>
</layout>